{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/worker",
    "rootDir": "../..",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "../**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../../dist",
    "../../.next"
  ]
}
